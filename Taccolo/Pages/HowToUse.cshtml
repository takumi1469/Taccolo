@page
@model Taccolo.Pages.HowToUseModel
@{
    ViewData["Title"] = "How to Use";
}
@{
    Layout = "_taccoloLayout";
}
@section Styles {
    <link rel="stylesheet" href="/css/page-specific/StaticPages.css?v=2.0" />
    <link rel="stylesheet" href="/css/page-specific/HowToUse.css?v=2.0" />
}

<div class="div-main">
    <div class="div-how-to-use div-static-page">
        <h1 class="h1-title h1-title-how-to-use">
            How to Use Taccolo
        </h1>
        <p class="p-about-taccolo">
            Please watch this video! :)
        </p>
        <div class="div-iframe">
            <iframe src="https://www.youtube.com/embed/r2OhLFU64qQ" title="What is Taccolo and How to Use Taccolo"
                    frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                    referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
        </div>
        <h2>How exactly can I use Taccolo to learn a language?</h2>
        <p class="p-about-taccolo">
            How to learn languages with Taccolo is up to you. The developer likes to learn languages with music, so he uses Taccolo to learn the lyrics of his favorite songs, as described in this video:
        </p>
        <div class="div-iframe">
            <iframe width="800" height="450" src="https://www.youtube.com/embed/u6-yDEGSq0c" title="Usecase Example of Taccolo - Learn Song Lyrics"
                    frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                    referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
        </div>


    </div>
</div>